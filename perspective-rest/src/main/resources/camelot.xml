        <plugin id="requestsLogger">
            <resource>org.meridor.perspective.rest.RequestsLoggingResource</resource>
            <processor>org.meridor.perspective.rest.RequestsCountProcessor</processor>
        </plugin>
    </source>
</plugins-config>